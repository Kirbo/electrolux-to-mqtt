{
  "name": "electrolux-to-mqtt",
  "version": "development",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "pnpm biome check --write",
    "clean": "rimraf node_modules",
    "dev:docker": "NODE_VERSION=$(cat .nvmrc) docker compose -f docker/docker-compose.local.yml down && NODE_VERSION=$(cat .nvmrc) docker compose -f docker/docker-compose.local.yml up --build",
    "backend:docker": "NODE_VERSION=$(cat .nvmrc) docker compose -f telemetry-backend/docker-compose.yml down && NODE_VERSION=$(cat .nvmrc) docker compose -f telemetry-backend/docker-compose.yml up --build",
    "dev": "tsx watch src/index.ts",
    "format": "pnpm biome format --write",
    "lint": "pnpm biome lint --write",
    "nuke": "pnpm clean ; pnpm install",
    "postinstall": "[ -f /.dockerenv ] || [ -n \"$CI\" ] || [ -n \"$DOCKER_BUILD\" ] && exit 0; bash scripts/postinstall.sh || exit 0",
    "start": "tsx src/index.ts",
    "test": "vitest run --coverage",
    "test:e2e": "E2E_TEST=true vitest run tests/e2e/electrolux-api.e2e.test.ts",
    "test:watch": "vitest",
    "sonar": "sonar-scanner",
    "update-deps": "pnpm update"
  },
  "keywords": [],
  "author": "Kimmo Saari <kirbo@kirbo-designs.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "axios": "^1.13.4",
    "mqtt": "^5.14.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "tiny-lru": "^11.4.7",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
